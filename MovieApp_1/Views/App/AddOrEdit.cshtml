@*en las Razor pages el arroba y llaves encierran el codigo razor*@
@model MovieViewModel
@{
  ViewBag.Title = "Editar Pelicula";
}
<div>
  <h4>Editar Pelicula</h4>
  <div>
    <!---<div asp-validation-summary="All"></div>--->
    <form method="POST">
      <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Genre">Genero</label>

        <input type="text" class="form-control" asp-for="Genre">
        <span asp-validation-for="Genre" class="text-danger"></span>
      </div>
      <input type="submit" class="btn btn-primary" value="Guardar">
      <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>